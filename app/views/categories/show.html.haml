- set_meta_tags title: "Category: #{@category_name}"
- set_meta_tags description: "#{@category_name}に関する記事の一覧です。"

.container
  .row
    .col-md-12
      - breadcrumb :category, @category_name
    .col-md-8
      - @posts.each do |post|
        %section
          %h1= post.title
          %p= post.description
          = link_to 'Read more', blog_friendly_path(post), class: %w(btn btn-success mt-5)
        %hr
    .col-md-4
      = render 'shared/side_nav', categories: @categories, tags: @tags
  .center
    = paginate @posts, params: {controller: 'blog', action: 'index'}
