%section
  %header
    %h3
      = link_to 'categories', categories_path
  %hr
  %ul
    - @categories.each do |category|
      %li= category.render_category_link
%section
  %header
    %h3
      = link_to 'tags', tags_path
  %hr
  %ul
    - tag_cloud(@tags, %w(s m l xl)) do |tag, css_class|
      = link_to tag.name, tag_path(tag.name), class: css_class
%section
  %header
    %h3 最新記事
  %hr
  %ul
    - (@latest_posts || @posts).each do |post|
      = link_to blog_path(post) do
        %li= post.title
          %p= post.description
